<h1>Transferencias realizadas (Directas y por seleccion)</h1>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Número</th>
      <th>Area destino</th>
      <th>Deposito destino</th>      
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @transferencia.each do |transferencia| %>
      <tr>
        <td><%= transferencia.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= transferencia.id %></td>
        <td><%= transferencia.area.nombre %></td>
        <td><%= transferencia.deposito.nombre %></td>        
        <td><%= link_to 'Ver', transferencia %></td>
        <td><%= link_to 'Imprimir', imprimir_formulario_transferencias_path(transferencia), method: :post, data: { confirm: '¿Esta seguro?' }  %>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>
