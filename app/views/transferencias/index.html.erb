<h1>Transferencias realizadas (Directas y por seleccion)</h1>

<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Número</th>
      <th>Area destino</th>
      <th>Deposito destino</th>      
      <th>Origen</th>
      <th>Recepción número</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transferencia.each do |transferencia| %>
      <tr>
        <td><%= transferencia.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= transferencia.id %></td>
        <td><%= transferencia.area ? transferencia.area.nombre : "" %></td>
        <td><%= transferencia.deposito ? transferencia.deposito.nombre : "" %></td>        
        <td><%= transferencia.recepcion_para_transf ? "Desde recepción" : "Manual"  %></td>
        <td><%= transferencia.recepcion_para_transf ? transferencia.recepcion_para_transf.recepcion_de_bien_de_consumo.id : ""  %></td>
        <td><%= link_to 'Ver', transferencia %></td>
        <td><%= link_to 'Imprimir', imprimir_formulario_transferencias_path(transferencia), method: :post, data: { confirm: '¿Esta seguro?' }  %>    
        <td><%= link_to 'Eliminar', transferencia, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
