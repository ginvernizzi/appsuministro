<% if !@items_stock.nil? && @items_stock.length > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Costo</th>
        <th>Costo total</th>
        <th>Deposito</th>
        <th>Area</th>      
      </tr>
    </thead>

    <tbody>
      <% @items_stock.each do |item_stock| %>
        <tr>
          <td><%= obtener_codigo_completo_bien_de_consumo(item_stock.bien_de_consumo.nombre) %></td>
          <td><%= item_stock.bien_de_consumo.nombre %></td>
          <td><%= item_stock.cantidad %></td>        
          <td><%= item_stock.costo_de_bien_de_consumo.costo %></td>
          <td><%= obtener_costo_total(item_stock.costo_de_bien_de_consumo.costo, item_stock.cantidad) %></td>
          <td><%= item_stock.deposito.nombre %></td>        
          <td><%= item_stock.deposito.area.nombre %></td>       
        </tr>
      <% end %>
      <% if(@items_stock.length > 0) %>    
        <% if @items_stock.detect { |e|  @items_stock.count(e.bien_de_consumo_id) > 1 } != nil  %>
          <td><%= link_to 'Imprimir', imprimir_formulario_stock_total_todos_los_bienes_items_stock_path , method: :post, data: { confirm: '¿Esta seguro?' }  %>        
          </td>   
        <% else %>  
            <td><%= link_to 'Imprimir',  bien_de_consumo_area_item_stock_imprimir_formulario_stock_total_por_bien_y_area_path(@items_stock.first().bien_de_consumo.id, @items_stock.first().deposito.area.id, 0), method: :post, data: { confirm: '¿Esta seguro?' }  %>        
            </td>       
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>