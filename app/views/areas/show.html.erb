<div class="panel panel-default">
   <div class="panel-heading">Deposito</div>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
    </tr>
  </thead>
  <tbody>
    <% if @area.depositos.any? %>
        <% @area.depositos.each do |deposito| %>
        <tr>        
          <% if deposito %>
              <td><%= deposito.nombre %> </td>              
              <td><%= link_to 'Eliminar', area_deposito_path(@area, deposito), method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
              
          <% end %> 
        </tr>            
        <%end%>
    <% else %>
        <tr>     
          <td></td>   
          <td></td>
        </tr>    
    <% end %>      
  </tbody>
</table>
</div>  

