      <% @recepcion_de_bien_de_consumo.errors.full_messages.each do |message| %>
        <li><%= message %></li>        
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <div class="field">    
    <%= f.label :fecha %><br />
    <%= f.text_field :fecha %>  
