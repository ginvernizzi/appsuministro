  <%= form_for(@recepcion_de_bien_de_consumo) do |f| %>
  <% if @recepcion_de_bien_de_consumo.errors.any? %>  
    <div id="error_explanation">
      <h2><%= pluralize(@recepcion_de_bien_de_consumo.errors.count, "error/es") %> en el formulario. La recepcion no pudo ser actualizada:</h2>
      <ul>
      <% @recepcion_de_bien_de_consumo.errors.full_messages.each do |message| %>
        <li><%= message %></li>        
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">    
    <%= f.label :fecha %><br />
    <%= f.text_field :fecha, { :disabled => true} %>  
  </div> 

  <div class="field">
    <%= f.label :estado %><br> 
    <%= collection_select(:recepcion_de_bien_de_consumo, "estado", RecepcionDeBienDeConsumo::ESTADOS, :last, :first, { :include_blank => "Seleccione estado...", :selected =>  @recepcion_de_bien_de_consumo.estado } ) %>       
  </div>
    
    <div class="field">
        <%= label_tag :descripcion_provisoria %><br>
        <%= f.text_area :descripcion_provisoria , size: '25x4'   %>     
    </div>   


<div class="panel panel-default">
   <div class="panel-heading">Documento principal</div>
<table class="table">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>numero</th>
    </tr>
  </thead>
  <tbody>    
      <tr>      	
        <td><%= @recepcion_de_bien_de_consumo.documento_principal.documento_de_recepcion.tipo_de_documento.nombre %></td>
        <td><%= @recepcion_de_bien_de_consumo.documento_principal.documento_de_recepcion.numero_de_documento %></td>
      </tr>    
  </tbody>
</table>
</div>

  <div class="panel panel-default">
   <div class="panel-heading">Documentos secundarios</div>
<table class="table">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>numero</th>
    </tr>
  </thead>
  <tbody>
  	<% if @recepcion_de_bien_de_consumo.documentos_secundario.any? %>
        <% @recepcion_de_bien_de_consumo.documentos_secundario.each do |doc_secundario| %>
        <% if doc_secundario.documento_de_recepcion %>
      	     <tr>      	          
        	     <td><%= doc_secundario.documento_de_recepcion.tipo_de_documento.nombre %> </td>
        	     <td><%= doc_secundario.documento_de_recepcion.numero_de_documento %> </td>        
      	     </tr>    
        <% end %>
    <%end%>
    <% else %>
      	<tr>      	
        	<td></td>
        	<td></td>
      	</tr>    
   	<% end %>      
  </tbody>
</table>
</div>

<div class="panel panel-default">
<div class="panel-heading">Bienes de consumo</div>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo</th>
      <th>Cantidad</th>
      <th>Costo</th>
    </tr>
  </thead>
  <tbody>
    <% if @recepcion_de_bien_de_consumo.bienes_de_consumo_de_recepcion.any? %>
        <% @recepcion_de_bien_de_consumo.bienes_de_consumo_de_recepcion.each do |bcr| %>
        <tr>        
          <td><%= bcr.bien_de_consumo.nombre %> </td>
          <td><%= bcr.bien_de_consumo.codigo %> </td>
          <td><%= bcr.cantidad %> </td>
          <td><%= bcr.costo %> </td>
        </tr>    
        <%end%>
    <% else %>
        <tr>        
          <td></td>
          <td></td>
        </tr>    
    <% end %>      
  </tbody>
</table>
</div>
 <%= f.submit "Actualizar Recepcion" %>  
<% end %>
<%= link_to 'Volver', recepciones_de_bien_de_consumo_path %>
