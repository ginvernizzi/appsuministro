<% if !@bien_de_consumo_para_consumir.nil? && @bien_de_consumo_para_consumir.length > 0 %>
<table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Comprobante consumo</th>      
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Obra o Proyecto</th>
      <th>Cantidad</th>
      <th> Ver </th>
    </tr>
  </thead>  
    <tbody>    
        <% @bien_de_consumo_para_consumir.each do |bien| %>
          <tr>
            <td><%= bien.consumo_directo.fecha.strftime("%d/%m/%Y") %></td>
            <td><%= bien.consumo_directo.id %></td>            
            <td><%= obtener_codigo_completo_bien_de_consumo(bien.bien_de_consumo.nombre) %></td>
            <td><%= bien.bien_de_consumo.nombre %></td>
            <td><%= bien.consumo_directo.obra_proyecto.descripcion  %></td>        
            <td><%= bien.cantidad %></td>   
            <td><%= link_to 'Ver', consumo_directo_path(bien.consumo_directo.id) %></td>     
          </tr>
        <% end %>    
        <% if(@bien_de_consumo_para_consumir.length > 0) %>              
            <td><%= link_to 'Imprimir', imprimir_formulario_consumos_por_codigo_destino_y_fecha_path(@bien_de_consumo_para_consumir.first().bien_de_consumo.id, @bien_de_consumo_para_consumir.first().consumo_directo.area.id, @bien_de_consumo_para_consumir.first().fecha_inicio, @bien_de_consumo_para_consumir.first().fecha_fin) , method: :post, data: { confirm: 'Â¿Esta seguro?' }  %>        
            </td>   
        <% end %>
    </tbody>      
</table>
<% else %>
  <h3> No hay resultados para mostrar </h3>  
<% end %>
<br>

